{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${command:cmake.buildDirectory}",
        "--config ${command:cmake.buildType}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$cmake", "$gcc"],
      "detail": "CMake build using preset",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}